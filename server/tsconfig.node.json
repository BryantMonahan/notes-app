{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "dist",
    "node_modules",
    "**/helpers/*Fixture.ts",
    "**/__mock__/**",
    "coverage"
  ],
  "linterOptions": {
    "exclude": []
  }
}